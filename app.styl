@import 'nib'

*
  box-sizing: border-box

body
  background-color #fff
  font-family "Open Sans", sans-serif
  color #444
  font-size 14px
  font-weight 600
  -webkit-font-smoothing antialiased

.content
  margin 40px auto
  border-radius 6px
  border 1px solid #ccc
  box-shadow inset 0px 1px 0px white, 0px 2px 3px #eee
  width 450px
  min-height 600px
  background-color #f7f6f5

.header
  padding 20px

h1
  margin 0px
  text-transform uppercase
  font-size 16px
  color #aaa
  text-shadow 0px 1px white

#new-todo-wrapper
  margin-top 20px
  overflow hidden

input, button, textarea
  -webkit-font-smoothing antialiased
  font-family "Open Sans", sans-serif

input[type='text']
  float left
  margin-right 2%
  padding 7px 8px
  border-radius 3px
  border 1px solid #ccc
  width 68%
  font-size 13px

  &:focus
    outline none
    border 1px solid #aaa

.button
  width 30%
  float left
  background-image linear-gradient(top, #f7f6f5, #e7e6e5)
  box-shadow inset 0px 1px 0px white
  border 1px solid #ccc
  border-radius 3px
  padding 7px 8px
  font-size 13px
  font-weight 600
  text-shadow 0px 1px white
  color #888
  cursor pointer

  &:hover
    box-shadow inset 0px 1px 0px white, 0px 2px 3px #ddd
    color #333

#todo-list
  margin 0px
  padding 0px
  list-style-type none

  li
    padding 10px 20px 10px
    border-bottom 1px solid #ddd
    box-shadow 0px 1px 0px white
    cursor pointer

    &:first-child
      border-top 1px solid #ddd
      box-shadow inset 0px 1px 0px white, 0px 1px 0px white

    &:hover
      background-color #eee
      box-shadow inset 0px 0px 3px #d9d9d9, 0px 1px 0px white

    input[type='checkbox']
      margin-right 10px

    label
      cursor pointer

