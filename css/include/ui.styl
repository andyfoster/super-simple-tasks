// UI style that's not the core task list

.wrapper
  margin 0px auto
  max-width 750px

.content
  margin 20px auto 40px
  padding 0px 5px 0px
  min-height 600px

#undo
  display none
  position fixed
  top 15px
  left 50%
  margin-left -100px
  width 200px
  z-index 200
  text-align center
  background-color gray
  color white
  border-radius 3px
  padding 3px 5px 4px
  cursor pointer

  &:hover
    background-color black

  .icon-history
    margin-right 5px
    vertical-align middle

// Add a new task

#new-task-wrapper
  margin-top 20px
  overflow hidden
