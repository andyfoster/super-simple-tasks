// Responsive for mobile devices

@media screen and (max-width: 500px)

  #title
    display none
  
  .content
    margin-top 0px

  .content, .footer, #task-submit, #new-task
    width 100%

  #task-submit, #new-task
    display block
    float none

  input[type='checkbox']
    vertical-align middle

  #task-list 

    li
      position relative
      padding-right 90px

      .priority
        position absolute
        top 15px
        right 20px

      .duedate
        display block
        width 100%
        float left
        margin-left 28px

  .footer ul li
    width 100%
    margin-bottom 5px
