// Create task input and button

.create-task
  padding 10px 15px 20px

  input, button
    margin-top 10px

// Styles for dragging & dropping

.slip-reordering
  z-index 500
  border 2px solid blue !important
  background-color white !important
  box-shadow 0px 2px 8px rgba(0,0,0,0.10)
  transition box-shadow 250ms

.slip-swiping-container
  overflow-x hidden

// The main task list

#task-list, #completed-task-list
  margin 0px
  padding 0px
  list-style-type none

  li
    padding 10px 15px
    border 2px solid transparent
    border-radius radius
    overflow hidden
    user-select none

    &:hover
      background-color #f7f6f5

    input[type='checkbox']
      cursor pointer
      width 28px
      height 15px
      margin 0px
      position relative
      overflow hidden

    label
      max-width 80%
      font-weight 500
      padding-left 28px
      text-indent -28px
      font-size font-small

    .drag-handle
      margin 4px -2px 0px 10px
      background-image url('../img/drag.svg')
      width 16px
      height 16px

      &:hover
        cursor pointer

    .priority
      color white
      min-width 65px
      text-align center
      padding 1px 4px 1px
      font-size font-xsmall
      text-transform capitalize
      font-weight 700
      border 2px solid transparent
      border-radius radius
      cursor pointer
      transition background transition-speed

    [priority='none']
      background transparent
      color xlight-gray
      border 2px solid xlight-gray

    [priority='blocker']
      background red

      &:hover
        background lighten(red, 5)

    [priority='major']
      background yellow

      &:hover
        background lighten(yellow, 5)  

    [priority='minor']
      background green

      &:hover
        background lighten(green, 2)


// The completed task bucket

#completed-tasks
  display none

